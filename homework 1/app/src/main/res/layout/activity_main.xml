<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BFFEB3B"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TV1"
        android:layout_width="371dp"
        android:layout_height="163dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="457dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Grade Calculator"
        android:textColor="#3F51B5"
        android:textSize="48sp" />

    <EditText
        android:id="@+id/quizzes"
        android:layout_width="222dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="385dp"
        android:backgroundTint="#00BCD4"
        android:ems="10"
        android:hint="Quizzes 15%"
        android:inputType="textPersonName"
        android:textColorHint="#00BCD4" />

    <EditText
        android:id="@+id/MidTerms"
        android:layout_width="222dp"
        android:layout_height="93dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="192dp"
        android:ems="10"
        android:hint="Mid-terms 30%"
        android:inputType="textPersonName"
        android:textColorHint="@color/teal_200" />

    <EditText
        android:id="@+id/Homework"
        android:layout_width="222dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="302dp"
        android:ems="10"
        android:hint="Homework 25%"
        android:inputType="textPersonName"
        android:textColorHint="#00BCD4" />

    <EditText
        android:id="@+id/Finals"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="90dp"
        android:ems="10"
        android:hint="Finals 30%"
        android:inputType="textPersonName"
        android:textColorHint="#00BCD4" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="174dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="64dp"
        android:textSize="34sp" />

    <Button
        android:id="@+id/calc"
        android:layout_width="223dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="15dp"
        android:text="calculate" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="144dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="6dp"
        android:text="Reset" />

</RelativeLayout>